package com.mailjet.api.client.config;

/**
 * Exception used by the MailJet API Wrapper library to signal errors related to
 * accessing the MailJet API or indicate for library misuse.
 * 
 * @author MailJet
 * 
 */
public final class MailJetClientConfigurationException extends Exception {

	/**
	 * Constructor.
	 * 
	 * @param cause
	 *            not null, the exception that prevented the access to the API
	 */
	public MailJetClientConfigurationException(final Throwable cause) {
		super(cause);
	}

	/**
	 * Constructor.
	 * 
	 * @param message
	 *            not null,message describing the error that prevented the
	 *            access to the API
	 */
	public MailJetClientConfigurationException(final String message) {
		super(message);
	}

	/**
	 * Constructor.
	 * 
	 * @param message
	 *            not null,message describing the error that prevented the
	 *            access to the API
	 * @param cause
	 *            not null, the exception that prevented the access to the API
	 */
	public MailJetClientConfigurationException(final String message, final Throwable cause) {
		super(message, cause);
	}

	private static final long serialVersionUID = -4636817804101796385L;

}
